FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    nginx \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create data directory
RUN mkdir -p /app/data

# Configure nginx for dashboard
RUN echo 'server { \
    listen 8080; \
    root /app; \
    location / { \
        try_files /live_dashboard.html =404; \
    } \
    location /dashboard_data.json { \
        alias /app/data/dashboard_data.json; \
        add_header Cache-Control "no-cache, no-store, must-revalidate"; \
    } \
}' > /etc/nginx/sites-available/default

# Expose port
EXPOSE 8080

# Create startup script with proper logging
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
# Initialize database\n\
echo "========================================"\n\
echo "Initializing database..."\n\
echo "========================================"\n\
python init_database.py || { echo "Database init failed!"; exit 1; }\n\
\n\
# Start autonomous agent in background WITH LOGGING\n\
echo "========================================"\n\
echo "Starting autonomous research agent..."\n\
echo "========================================"\n\
python -u start_agent.py 2>&1 | tee -a /tmp/agent.log &\n\
AGENT_PID=$!\n\
echo "Agent PID: $AGENT_PID"\n\
sleep 2\n\
\n\
# Check if agent is still running\n\
if kill -0 $AGENT_PID 2>/dev/null; then\n\
    echo "✅ Agent started successfully (PID: $AGENT_PID)"\n\
else\n\
    echo "❌ Agent failed to start! Check logs:"\n\
    cat /tmp/agent.log\n\
    exit 1\n\
fi\n\
\n\
# Start dashboard updater in background\n\
echo "========================================"\n\
echo "Starting dashboard updater..."\n\
echo "========================================"\n\
python -u update_dashboard_data.py 2>&1 &\n\
\n\
# Start nginx for dashboard\n\
echo "========================================"\n\
echo "Starting web dashboard..."\n\
echo "========================================"\n\
nginx -g "daemon off;"\n\
' > /app/start.sh && chmod +x /app/start.sh

# Start all services
CMD ["/app/start.sh"]
